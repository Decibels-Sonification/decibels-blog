---
const { tags } = Astro.props;
---

<div class="tags">
    {
        tags.map((tag) => (
            <p>
                <a class="tag" href={`/tags/${tag}`}>
                    {tag}
                </a>
            </p>
        ))
    }
</div>

<style>
    a {
        color: #173561;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        margin: 0 auto;
    }

    .tag {
        margin: 0.25em;
        border: dotted 1px #173561;
        border-radius: 0.5em;
        padding: 0.5em 1em;
        font-size: 1.15em;
        background-color: #fffdf1;
    }
</style>
