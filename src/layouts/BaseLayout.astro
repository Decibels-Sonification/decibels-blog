---
import Header from "../components/Header.astro";
import "../styles/global.css";
const { pageTitle } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <style>
            @import url("https://fonts.googleapis.com/css2?family=Inter:wght@100;400;700;900&display=swap");
        </style>
        <link rel="stylesheet" type="text/css" href="style.css" />
        <link rel="shortcut icon" href="/img/favicon.png" type="image/x-icon" />
        <link rel="icon" href="/img/favicon.png" type="image/x-icon" />

        <meta name="generator" content={Astro.generator} />
        <title>Decibels - {pageTitle}</title>

        <meta property="og:title" content="Decibels" />
        <meta property="og:description" content={pageTitle} />
        <meta property="og:url" content="https://decibels.community" />
        <meta
            property="og:image"
            content="https://decibels.community/img/og.png"
        />
        <meta property="og:image:width" content="1200" />
        <meta property="og:type" content="text/html" />
    </head>
    <body>
        <Header />
        <slot />
    </body>
</html>
